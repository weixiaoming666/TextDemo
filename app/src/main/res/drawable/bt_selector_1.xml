<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>

            <corners
                android:radius="14dp"
                />
            <gradient
                android:gradientRadius="99"
                android:centerX="80%"
                android:centerY="50%"
                android:centerColor="#a2eae2"
                android:startColor="#4b85f9"
                android:endColor="#ca2f11"
                android:type="radial"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="250dp"
                android:height="60dp"
                />
            <stroke
                android:width="2dp"
                android:color="#878787"
                />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="14dp"
                />
            <gradient
                android:gradientRadius="95"
                android:centerX="80%"
                android:centerY="50%"
                android:centerColor="#ecdd0a"
                android:startColor="#77d9c7"
                android:endColor="#2e46e6"
                android:type="radial"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="250dp"
                android:height="60dp"
                />
            <stroke
                android:width="0.5dp"
                android:color="#878787"
                />
        </shape>
    </item>
</selector>