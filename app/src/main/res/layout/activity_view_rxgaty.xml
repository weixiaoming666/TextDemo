<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.textdemo.view.ryglearn.activity.MyScroView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.textdemo.view.ryglearn.ViewRXGAty">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/callback"
            android:text="任玉刚，安卓开发艺术view"
            app:layout_constraintHorizontal_bias="0.445"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <com.example.administrator.textdemo.view.ryglearn.AllShowListView
                android:backgroundTint="@color/yellow"
                android:divider="@color/red"
                android:dividerHeight="2dp"
                android:background="@color/yellow"
                android:id="@+id/lv"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="32dp"
                android:entries="@array/view_learn_items"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"></com.example.administrator.textdemo.view.ryglearn.AllShowListView>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="8dp"
            android:background="@color/graw"
            android:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/lv"
            tools:layout_editor_absoluteX="145dp" />
    </android.support.constraint.ConstraintLayout>

</com.example.administrator.textdemo.view.ryglearn.activity.MyScroView>
