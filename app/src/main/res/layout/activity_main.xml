<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.textdemo.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
    <TextView
        android:gravity="center"
        android:onClick="start"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="横向滑动测试!"
        android:background="@color/colorPrimary"/>

    <TextView
        android:background="@color/yellow"
        android:gravity="center"
        android:textSize="20dp"
        android:onClick="intentFilter"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="AIDL Text!"
        />

    <TextView
        android:id="@+id/tv_demo"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:textSize="20dp"
        android:onClick="aidlText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="IntentFilter Text!"
       />
    <TextView
        android:background="@color/mvp"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="mvpDemo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="mvp模式 Text!"
       />
    <TextView
        android:background="@color/graw"
        android:gravity="center"
        android:textSize="20dp"
        android:onClick="viewpageDemo1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="水滴viewpage Text!"
        />
    <TextView
        android:background="@color/micolor"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="miClock"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="小米时钟 Text!"
         />
    <TextView
        android:background="@color/micolor"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="myClock"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="mvp 自动深南工!"
        />
    <TextView
        android:background="@color/callback"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="callback"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="标准接口回调" />
    <TextView
        android:background="@color/mvc"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="jumpmvc"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="MVC!!!!"
       />
    <TextView
        android:background="@color/mvc"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="jumpRader"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="雷达波形图!!!!" />
    <TextView
        android:background="@color/discrowview"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="jumpDiscroll"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="带动画加入的自定义view!!!!"
 />

    <TextView

        android:background="@color/shop"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="shopAddDel"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="购物车增减按钮!!!!"
      />
    <TextView

        android:background="@drawable/learn_view_shape"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="learnView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="一字一句敲打的自定义view学习!!!!"
        />
    <TextView

        android:background="@drawable/learn_view_shape"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="showDialog"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="show Dialog"
        />
    <TextView

        android:background="@drawable/learn_view_shape"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="showDuoTai"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="多态，不存在的"
        />
    <TextView

        android:background="@drawable/learn_view_shape"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="showReciver"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="广播"
        />
    <TextView
        android:background="@drawable/learn_view_shape"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="viewLeanRYG"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="任玉刚 view 研究"
        />
    <TextView
        android:background="@drawable/learn_view_shape"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="litepal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="litePal"
        />
    <TextView
        android:background="@drawable/learn_view_shape"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="gson2hanzi"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Gson汉子"
        />
    <TextView
        android:background="@drawable/learn_view_shape"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="grep"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="正则表达式"
        />
</LinearLayout>
</ScrollView>
