                    android:layout_width="match_parent"
                    android:checked="true"
                    android:button="@null"
                    android:layout_height="50dp"
                    android:gravity="center|bottom"
                    android:text="首页"/>
                <RadioButton
                    android:id="@+id/rb_5"
                    android:background="@drawable/bg_select_center"
                    android:layout_width="match_parent"
                    android:checked="true"
                    android:button="@null"
                    android:layout_height="50dp"
                    android:gravity="center|bottom"
                    android:text="首页"/>
                <RadioButton
                    android:id="@+id/rb_6"
                    android:background="@drawable/bg_select_center"
